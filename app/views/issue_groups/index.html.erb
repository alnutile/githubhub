<div class="page-header">
  <%= link_to new_issue_group_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Issue group
  <% end %>
  <h1>Listing issue_groups</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Description</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @issue_groups) do |issue_group| %>
            <td><%= issue_group.title %></td>
            <td><%= issue_group.description %></td>
            <td><%= link_to 'Show', issue_group %></td>
        <td><%= link_to 'Edit', edit_issue_group_path(issue_group) %></td>
        <td><%= link_to 'Destroy', issue_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
